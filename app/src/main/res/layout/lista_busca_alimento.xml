<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="10">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/botao_edit"
        android:id="@+id/busca_alimento"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="NÃ£o conseguiu encontrar um alimento? Cadastre no aplicativo!"
        android:layout_marginTop="10dp"
        android:textColor="@color/blue"
        android:background="@drawable/list_item_style"
        android:id="@+id/cadastrar_alimento"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:id="@+id/lista_busca_alimentos"
        android:scrollbarStyle="insideOverlay"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="bottom|end">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/cancelar_alimentos"
            android:background="@drawable/botao_escuro"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:drawablePadding="-5dp"
            android:paddingLeft="5dp"
            android:text="@string/cancelar"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/conclui_alimentos"
            android:background="@drawable/botao_escuro"
            android:textColor="@color/white"
            android:text="@string/concluido"/>
    </LinearLayout>

</LinearLayout>