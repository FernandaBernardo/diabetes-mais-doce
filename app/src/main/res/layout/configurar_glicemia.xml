<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    android:padding="30dp">
    
    <TextView 
        android:gravity="center"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/configurar_glicemia_alvo"/>
    
	<TextView 
	    android:layout_marginTop="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/cafe_da_manha"/>
	<EditText 
	    android:paddingLeft="10dp"
	    android:background="@drawable/botao_edit"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="@string/mg_dl" 
	    android:inputType="number"
	    android:id="@+id/valor_cafe_glicemia"/>
	
	<TextView 
	    android:layout_marginTop="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/almoco"/>
	<EditText 
	    android:paddingLeft="10dp"
	    android:background="@drawable/botao_edit"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="@string/mg_dl" 
	    android:inputType="number"
	    android:id="@+id/valor_almoco_glicemia"/>

	<TextView 
	    android:layout_marginTop="10dp"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/jantar"/>
	<EditText 
	    android:paddingLeft="10dp"
	    android:background="@drawable/botao_edit"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="@string/mg_dl" 
	    android:inputType="number"
	    android:id="@+id/valor_jantar_glicemia"/>
	
	<Button 
	    android:layout_marginTop="15dp"
	    android:paddingLeft="10dp"
	    android:layout_width="200dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:text="@string/salvar"
	    android:textColor="#fff"
	    android:background="@drawable/botao_escuro"
	    android:id="@+id/salvar_dados_perfil_glicemia"/>
</LinearLayout>
</ScrollView>