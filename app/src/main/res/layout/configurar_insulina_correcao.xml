<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	>
    <LinearLayout
        style="@style/container"
        >

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/cafe_da_manha"
            />
        <EditText
            style="@style/edit_text"
            android:hint="@string/u_g_de_carboidrato"
            android:id="@+id/valor_cafe_correcao"
            android:inputType="number"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/pos_cafe"
            />
        <EditText
            style="@style/edit_text"
            android:hint="@string/u_g_de_carboidrato"
            android:id="@+id/valor_lanche_manha_correcao"
            android:inputType="number"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/almoco"
            />
        <EditText
            style="@style/edit_text"
            android:hint="@string/u_g_de_carboidrato"
            android:id="@+id/valor_almoco_correcao"
            android:inputType="number"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/pos_almoco"
            />
        <EditText
            style="@style/edit_text"
            android:hint="@string/u_g_de_carboidrato"
            android:id="@+id/valor_lanche_tarde_correcao"
            android:inputType="number"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/jantar"
            />
        <EditText
            style="@style/edit_text"
            android:hint="@string/u_g_de_carboidrato"
            android:id="@+id/valor_jantar_correcao"
            android:inputType="number"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/pos_jantar"
            />
        <EditText
            style="@style/edit_text"
            android:id="@+id/valor_ceia_correcao"
            android:inputType="number"
            android:hint="@string/u_g_de_carboidrato"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/madrugada"
            />
        <EditText
            style="@style/edit_text"
            android:id="@+id/valor_madrugada_correcao"
            android:inputType="number"
            android:hint="@string/u_g_de_carboidrato"
            />
        <Button
            style="@style/action_button"
            android:id="@+id/salvar_insulina_correcao"
            android:text="@string/salvar"
            />
    </LinearLayout>
</ScrollView>