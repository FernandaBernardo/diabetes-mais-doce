<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_style">
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:padding="15dp">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/glicemia_tipo_refeicao"
	        android:layout_alignParentTop="true"
        	android:layout_alignParentLeft="true"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/glicemia_dia"
	        android:textColor="#ccc"
			android:layout_below="@id/glicemia_tipo_refeicao"
			android:layout_marginTop="3dp"
        	android:layout_alignParentLeft="true"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/glicemia_valor"
	        android:layout_marginRight="30dp"
	        android:layout_centerVertical="true"
	        android:textStyle="bold"
	        android:layout_toLeftOf="@+id/glicemia_imagem"/>
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/glicemia_imagem"
	        android:layout_marginRight="10dp"
	        android:paddingRight="10dp"
        	android:layout_alignParentRight="true"/>
	    </RelativeLayout>
	    
	    <ImageView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/options"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentRight="true"
	        android:id="@+id/glicemia_opcoes"
	        android:layout_marginTop="10dp"
	        android:layout_marginRight="10dp"/>
	    
</RelativeLayout>
